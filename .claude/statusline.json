    },
    "go_version": {
      "command": "go version | awk '{print $3}' | sed 's/go//'",
      "refresh": 60000,
      "color": "cyan"
    },
    "project_status": {
      "command": "if [ -f ./freightliner ]; then echo 'âœ“ Built'; else echo 'âœ— Not built'; fi",
