      "command": "git rev-parse --abbrev-ref HEAD 2>/dev/null || echo 'no-git'",
      "refresh": 5000,
      "color": "blue"
    },
    "git_status": {
      "command": "git status --porcelain 2>/dev/null | wc -l | awk '{if ($1 == 0) print \"âœ“\"; else print \"âš  \" $1 \" changes\"}'",
      "refresh": 5000,
