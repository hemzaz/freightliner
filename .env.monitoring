# Environment Configuration for Freightliner Monitoring Stack
# Copy this file to .env and customize for your environment
# Usage: docker-compose -f docker-compose.monitoring.yml --env-file .env up -d

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
ENVIRONMENT=development
TZ=UTC

# =============================================================================
# PROMETHEUS CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d
PROMETHEUS_RETENTION_SIZE=10GB
PROMETHEUS_LOG_LEVEL=info

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_DOMAIN=localhost
GRAFANA_ALLOW_SIGNUP=false
GRAFANA_DEFAULT_THEME=dark
GRAFANA_ANONYMOUS_ENABLED=false
GRAFANA_ANONYMOUS_ROLE=Viewer
GRAFANA_LOG_LEVEL=info

# =============================================================================
# FREIGHTLINER API CONFIGURATION
# =============================================================================
FREIGHTLINER_VERSION=latest
API_HOST=0.0.0.0
API_PORT=8080
METRICS_PORT=2112
LOG_LEVEL=info

# Worker pool settings
WORKER_POOL_SIZE=10
MAX_CONCURRENT_REPLICATIONS=5
HTTP_TIMEOUT=300s
RETRY_ATTEMPTS=3
RETRY_BACKOFF=exponential

# =============================================================================
# CLOUD PROVIDER CREDENTIALS
# =============================================================================
# AWS Configuration
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# GCP Configuration
GCP_PROJECT_ID=
GCP_REGION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/app/config/gcp-sa-key.json

# =============================================================================
# ALERTMANAGER CONFIGURATION (Optional - full profile)
# =============================================================================
ALERTMANAGER_PORT=9093
ALERTMANAGER_URL=http://localhost:9093
ALERTMANAGER_LOG_LEVEL=info

# =============================================================================
# NODE EXPORTER CONFIGURATION (Optional - full profile)
# =============================================================================
NODE_EXPORTER_PORT=9100

# =============================================================================
# CADVISOR CONFIGURATION (Optional - full profile)
# =============================================================================
CADVISOR_PORT=8081

# =============================================================================
# REDIS CONFIGURATION (Optional - full profile)
# =============================================================================
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb

# =============================================================================
# OBSERVABILITY & TRACING (Optional)
# =============================================================================
JAEGER_AGENT_HOST=
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=probabilistic
JAEGER_SAMPLER_PARAM=0.1
