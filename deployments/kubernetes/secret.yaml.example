# Example secret configuration
# DO NOT commit actual secrets to version control
# Use sealed-secrets, external-secrets, or your cloud provider's secret manager

apiVersion: v1
kind: Secret
metadata:
  name: freightliner-secrets
  labels:
    app: freightliner
type: Opaque
stringData:
  # AWS Credentials (use IAM roles instead when possible)
  aws_access_key_id: "YOUR_AWS_ACCESS_KEY_ID"
  aws_secret_access_key: "YOUR_AWS_SECRET_ACCESS_KEY"

  # GCP Service Account (mount as file instead)
  # gcp_service_account_key: |
  #   {
  #     "type": "service_account",
  #     "project_id": "your-project",
  #     ...
  #   }

  # Docker Registry credentials (if using private registry)
  # .dockerconfigjson: |
  #   {
  #     "auths": {
  #       "ghcr.io": {
  #         "auth": "base64_encoded_credentials"
  #       }
  #     }
  #   }

---
# Create secret from command line (recommended):
# kubectl create secret generic freightliner-secrets \
#   --from-literal=aws_access_key_id="YOUR_KEY" \
#   --from-literal=aws_secret_access_key="YOUR_SECRET" \
#   -n freightliner-production

# Or use external-secrets operator:
# apiVersion: external-secrets.io/v1beta1
# kind: ExternalSecret
# metadata:
#   name: freightliner-secrets
# spec:
#   refreshInterval: 1h
#   secretStoreRef:
#     name: aws-secrets-manager
#     kind: SecretStore
#   target:
#     name: freightliner-secrets
#   data:
#     - secretKey: aws_access_key_id
#       remoteRef:
#         key: freightliner/aws
#         property: access_key_id
