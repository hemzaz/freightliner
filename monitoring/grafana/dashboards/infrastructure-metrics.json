{
  "dashboard": {
    "id": null,
    "uid": "freightliner-infrastructure",
    "title": "Freightliner - Infrastructure Metrics",
    "tags": ["freightliner", "infrastructure", "system"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Service Uptime",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "avg_over_time(up{job=\"freightliner\"}[1h])",
            "legendFormat": "Uptime"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.99, "color": "yellow"},
                {"value": 0.999, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Memory Usage",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "freightliner:system:memory_mb",
            "legendFormat": "Memory MB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mbytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 3072, "color": "yellow"},
                {"value": 4096, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Goroutines",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "freightliner:system:goroutines",
            "legendFormat": "Goroutines"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5000, "color": "yellow"},
                {"value": 10000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Worker Pool Utilization",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "freightliner:worker_pool:utilization",
            "legendFormat": "Utilization"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.9, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "HTTP Request Rate",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum by (status) (rate(freightliner_http_requests_total[5m]))",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "HTTP Request Duration",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum by (le) (rate(freightliner_http_request_duration_seconds_bucket[5m])))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, sum by (le) (rate(freightliner_http_request_duration_seconds_bucket[5m])))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, sum by (le) (rate(freightliner_http_request_duration_seconds_bucket[5m])))",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "Memory Usage Over Time",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "freightliner:system:memory_mb",
            "legendFormat": "Memory Usage"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mbytes"
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Goroutine Count",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "freightliner:system:goroutines",
            "legendFormat": "Goroutines"
          }
        ]
      },
      {
        "id": 9,
        "type": "timeseries",
        "title": "Worker Pool Status",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "freightliner_worker_pool_size",
            "legendFormat": "Pool Size"
          },
          {
            "expr": "freightliner_worker_pool_active",
            "legendFormat": "Active Workers"
          },
          {
            "expr": "freightliner_worker_pool_queued",
            "legendFormat": "Queued Jobs"
          }
        ]
      },
      {
        "id": 10,
        "type": "timeseries",
        "title": "Job Execution Rate",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum by (type, status) (rate(freightliner_jobs_total[5m]))",
            "legendFormat": "{{type}} - {{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 11,
        "type": "gauge",
        "title": "Active Jobs",
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "freightliner_jobs_active",
            "legendFormat": "Active"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "type": "timeseries",
        "title": "Authentication Failures",
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "sum by (type) (rate(freightliner_auth_failures_total[5m]))",
            "legendFormat": "{{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "custom": {
              "drawStyle": "bars"
            }
          }
        }
      }
    ]
  }
}
